@font-face
   font-family Blacker
   font-style bold
   src url(../fonts/Blacker-Bold.ttf)

.navbar_container
    background: linear-gradient(to bottom, #3c93dc 25%, #3cdcdc 100%)
    transition: .4s

    position: fixed
    top: 0px
    left: 0px
    transform: translateX(0%)

    width: fit-content
    padding: 0 0px 0 0px
    height: 100%
    border-top: none

    &:after
        position: absolute;
        content: "";
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 900px 150px 0 0;
        border-color: rgba(255,255,255,0.3) transparent transparent transparent;
        top: 0;
        left: 0;
        right: 0;
        z-index: -1;
        opacity: .2;

    .navbar_title
        font-family Blacker
        text-align: center
        padding: 20px 20px 20px 40px
        width: 100%

        p
            font-size: 1.4em
            color: white
            margin: 10px 10px 10px 0

        i 
            padding-right: 10px
            color: white
            font-size: 1.2em

    .navbar_element
        margin: 0
        width: 100%
        padding: 8px 20px 8px 40px
        color: white

        transition: .3s
        text-decoration: none
        list-style-type: none;
        //font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif

        &:hover
            transform: translateX(10px)
            cursor: pointer
            opacity: .8
            transition: .3s